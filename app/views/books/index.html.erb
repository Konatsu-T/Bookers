<% if flash[:notice] %>
  <div class="flash">
   <%= flash[:notice] %>
  </div>
<% end %>

  <h1>Books</h1>
  <table>
   <thead>
     <th>Title</th>
     <th>Body</th>
   </thead>
   <tbody>
     <% @books.each do |book| %>
      <tr>
  	   <td><%= book.title %></td>
  	   <td><%= book.body %></td>
       <td><%= link_to 'Show', book_path(book) %></td>
       <td><%= link_to 'Edit', edit_book_path(book) %></td>
       <td><%= link_to 'Destroy', book_path(book.id),method: :delete, data: {confirm: "Are you sure?"} %></td>
     </tr>
     <% end %>
   </tbody>
  </table>


<h2>New book</h2>
<% if @book.errors.any? %>
  <div class="error_explanation">
    <h2 class="error-heading"><%= @book.errors.count %> error prohibited this book from being saved:</h2>
   <ul class="error_message">
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
  </div>
<% end %>
   <%= form_for(@book) do |f| %>
    <p><label>Title</label></p>
    <%= f.text_field :title %>
    <p><label>Body</label></p>
    <%= f.text_area :body %>
    <p><%= f.submit 'Create Book' %></p>
<% end %>


