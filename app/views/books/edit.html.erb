<h1><strong>Editing Book</strong></h1>
<% if @book.errors.any? %>
  <div class="error_explanation">
    <h2 class="error-heading"><%= @book.errors.count %> error prohibited this book from being saved:</h2>
   <ul class="error_message">
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
  <div class="form-title">Title</div>
  <%= f.text_field :title %>
  <div class="form-body">Body</div>
  <%= f.text_area :body %>
  <div class="action"><%= f.submit 'Update Book' %></div>
<% end %>

<div>
  <%= link_to 'Show', book_path(@book.id) %> |
  <%= link_to 'Back', books_path %>
</div>

